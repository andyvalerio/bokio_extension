{
    "permissions": ["scripting"],
    "background": {
        "service_worker": "worker.js"
    },
    "name": "VAT inclusive price in Bokio",
    "manifest_version": 3,
    "host_permissions": ["http:\/\/*\/*", "https:\/\/*\/*"],
    "description": "Show the price including VAT in Bokio",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["*://app.bokio.se/*"],
          "js": ["contentScript.js"]
        }
    ],
    "version": "1.0"
}